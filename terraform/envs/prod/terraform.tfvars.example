# Copy this file to terraform.tfvars and update the values

# Environment
environment = "prod"
aws_region  = "ca-central-1"

# Application Configuration
# app_image = ""  # Leave empty to use auto-created ECR repository, or specify custom image URI

# SSL Certificate for HTTPS (required for production)
certificate_arn = "arn:aws:acm:ca-central-1:your-account:certificate/your-certificate-id"

# Custom domain name (required for production)
domain_name = "api.yourdomain.com"

# VPC Configuration (optional overrides)
# vpc_cidr = "10.1.0.0/16"
# availability_zones = ["ca-central-1a", "ca-central-1b"]

# Resource Sizing (production values)
app_cpu = 1024
app_memory = 2048
desired_count = 2

neo4j_cpu = 2048
neo4j_memory = 4096

opensearch_instance_type = "t3.medium.search"
opensearch_instance_count = 2
opensearch_volume_size = 50 